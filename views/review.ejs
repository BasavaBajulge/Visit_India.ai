<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Review Section</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Background gradient for the page */
        body {
            /* background: linear-gradient(to bottom right, #1abc9c, #16a085); */
        }

    
        /* Review card design */
        .review-card {
            background-color: #ffffff;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .review-card .card-header {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .review-card .card-header img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
        }

        .review-card .card-body {
            margin-top: 10px;
        }

        /* Adjustments for mobile view */
        @media (max-width: 767px) {
            .navbar-nav {
                text-align: center;
                width: 100%;
            }

            .nav-link {
                display: block;
                margin: 10px 0;
            }
        }
    </style>
</head>
<body>
    <!-- Include Navbar -->
    <%- include('nav') %>

    <div class="container">
        <h1 class="my-4 text-center">Submit Your Review</h1>

        <!-- Review Form -->
        <form action="/review" method="POST" class="p-4 border rounded shadow-sm bg-light mb-5">
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <input type="text" id="name" name="name" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="place" class="form-label">Place:</label>
                <input type="text" id="place" name="place" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="review" class="form-label">Review:</label>
                <textarea id="review" name="review" rows="4" class="form-control" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <!-- Review Section -->
        <h2 class="my-4 text-center">Reviews</h2>
        <div id="reviews">
            <% if (reviews && reviews.length > 0) { %>
                <div class="row">
                    <% reviews.forEach(function(review) { %>
                        <div class="col-md-6 col-lg-4">
                            <div class="card review-card shadow-sm">
                                <div class="card-header">
                                    <!-- Random Profile Picture from UI Avatars API -->
                                    <img src="https://ui-avatars.com/api/?name=<%= review.name.replace(' ', '+') %>&background=1abc9c&color=fff" alt="User Avatar">
                                    <div>
                                        <h5 class="card-title mb-1"><%= review.name %></h5>
                                        <h6 class="card-subtitle text-muted">Place : <%= review.place %></h6>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <p class="card-text"><%= review.review %></p>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p class="text-center">No reviews yet. Be the first to leave a review!</p>
            <% } %>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
