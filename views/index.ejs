<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Visit Bharat</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
  <style>
    .search-bar {
      margin-top: 20px;
    }
    .search-bar form {
      display: flex;
      justify-content: center;
    }
    .search-bar input {
      width: 50%;
      background-color: #f8f9fa;
      border-radius: 5px;
      padding: 10px;
    }
    .search-bar button {
      background-color: #54a555;
      border-color: #1abc9c;
      color: white;
      padding: 10px 20px;
      border-radius: 5px;
      margin-left: 10px;
    }
    .tagline {
      width: 100%;
      font-size: 2rem;
      font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
      font-weight: bold;
      color: #1abc9c;
      text-align: center;
      margin-top: 20px;
      padding: 20px;
      border-radius: 15px;
      transition: transform 0.3s ease;
    }
    .image-container {
      display: flex;
      justify-content: center;
      margin-top: 30px;
    }
    .image-slider {
      position: relative;
      width: 100%;
      height: 400px;
      overflow: hidden;
      border-radius: 15px;
    }
    .image-slider img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      opacity: 0;
      transition: opacity 1s ease-in-out;
      border-radius: 15px;
    }
    .image-slider img.active {
      opacity: 1;
    }
    .features-section {
      margin-top: 100px;
      text-align: center;
    }
    .features-section h2 {
      font-size: 2rem;
      color: #1abc9c;
      font-weight: bold;
      margin-bottom: 20px;
    }
    .features-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      padding: 20px;
    }
    .feature {
      background-color: #f8f9fa;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      text-align: center;
    }
    .feature img {
      width: 100%;
      height: 150px;
      object-fit: cover;
      border-radius: 10px;
      transition: transform 0.5s ease-in-out;
    }
    .feature h5 {
      margin-top: 10px;
      font-size: 1.1rem;
      font-weight: bold;
    }
    .feature img:hover {
      transform: scale(1.1);
    }
    @media (max-width: 767px) {
      .image-container {
        flex-direction: column;
        align-items: center;
      }
      .image-slider {
        width: 100%;
      }
      .tagline {
        font-size: 1.5rem;
        color: #1abc9c;
      }
    }
    .blur-feature-container {
      position: relative;
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      max-width: 1200px;
      height: 400px;
      overflow: hidden;
      border-radius: 15px;
      margin: 30px auto;
    }
    .blur-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: blur(2px);
      transform: scale(1.1);
    }
    .overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: flex-start;
      align-items: flex-end;
    }
    .btn-blur {
      background-color: #1abc9c;
      color: white;
      padding: 15px 30px;
      font-size: 1.2rem;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      margin-bottom: 20px;
      margin-left: 20px;
    }
    .btn-blur:hover {
      background-color: #159a78;
      color: white;
    }
    footer {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  align-items: center;
  margin-bottom: 0;
  background-color: #121212; /* Dark background for footer */
  color: #000000; /* White text for contrast */
  padding: 30px 20px; /* Added padding for better spacing */
  text-align: center; /* Center-align all content */
  border-top: 3px solid #1abc9c; /* Accent border on top */
}

.ai-feature-section {
      opacity: 0;
      transform: translateY(50px);
      transition: opacity 1s ease-out, transform 1s ease-out;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      margin-top: 50px;
      padding: 50px;
      background-color: #f1f8f6;
      border-radius: 20px;
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 1200px;
      margin-bottom: 30px;
    }

    .ai-feature-section.visible {
      opacity: 1;
      transform: translateY(0);
    }

    .ai-feature-section .ai-content h3 {
      color: #1abc9c;
      font-weight: bold;
      font-size: 2rem;
      margin-bottom: 20px;
    }

    .ai-feature-section .ai-content p {
      font-size: 1.2rem;
      color: #343a40;
      line-height: 1.6;
      max-width: 900px;
      margin: 0 auto 30px;
    }

    .btn-try-ai {
      background-color: #54a555;
      color: white;
      font-size: 1.1rem;
      padding: 12px 30px;
      border-radius: 8px;
      border: none;
      transition: transform 0.3s ease, background-color 0.3s ease;
    }

    .btn-try-ai:hover {
      background-color: #159a78;
      transform: scale(1.05);
    }

    /* Explore Section */
    .explore-section {
      margin-top: 50px;
      text-align: center;
      padding: 50px 20px;
      background-color: #f8f9fa;
      border-radius: 20px;
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    }

    .explore-section h2 {
      color: #1abc9c;
      font-size: 2rem;
      margin-bottom: 30px;
    }

    .states-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }

    .state {
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    .state h5 {
      color: #343a40;
      font-size: 1.2rem;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .state ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    .state ul li {
      font-size: 1rem;
      color: #555;
      margin-bottom: 5px;
    }
  </style>
</head>
<body>

  <%- include('nav') %>

  <div class="container">
    <div class="search-bar">
      <form class="d-flex" action="https://www.google.com/search" method="get">
        <input class="form-control me-2" type="search" name="q" placeholder="Search any place" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>

    <div class="tagline">
      Your one stop destination for all your travel needs! Explore Bharat
    </div>

    <div class="image-container">
      <div class="image-slider">
        <img class="active" src="/images/h-img1.jpeg" alt="Image 1">
        <img src="/images/h-img2.jpg" alt="Image 2">
        <img src="/images/h-img3.jpeg" alt="Image 3">
        <img src="/images/h-img4.jpg" alt="Image 4">
        <img src="/images/h-img5.jpg" alt="Image 5">
        <img src="/images/h-img6.jpg" alt="Image 6">
      </div>
    </div>


    <div class="ai-feature-section" id="ai-feature">
      <div class="ai-content text-center">
        <h3>Experience the Power of AI Recommendations</h3>
        <p>
          Our cutting-edge in-house AI is designed to provide you with customized travel experiences.
          Whether you're planning a serene retreat, an adventurous journey, or a cultural expedition, 
          our AI analyzes your preferences and curates the perfect itinerary for you. Explore destinations 
          you’ve never considered, discover hidden gems, and make every trip truly unforgettable.
        </p>
        <button type="submit" class="btn btn-primary">Try AI</button>
      </div>
    </div>
  
    <!-- Explore Section -->
    <div class="explore-section">
      <h2>Explore Famous Places in Each State</h2>
      <div class="states-container">
        <div class="state">
          <h5>Karnataka</h5>
          <ul>
            <li>Bengaluru - Silicon Valley of India</li>
            <li>Mysuru - City of Palaces</li>
            <li>Hampi - UNESCO Heritage Site</li>
            <li>Coorg - Scotland of India</li>
            <li>Gokarna - Pristine Beaches</li>
          </ul>
        </div>
        
        <div class="state">
          <h5>Maharashtra</h5>
          <ul>
            <li>Mumbai - Gateway of India</li>
            <li>Pune - Cultural Hub</li>
            <li>Lonavala - Scenic Hills</li>
            <li>Aurangabad - Ajanta & Ellora</li>
            <li>Mahabaleshwar - Hill Station</li>
          </ul>
        </div>
        <div class="state">
          <h5>Kerala</h5>
          <ul>
            <li>Munnar - Tea Gardens</li>
            <li>Alleppey - Backwaters</li>
            <li>Kochi - Port City</li>
            <li>Kovalam - Beaches</li>
            <li>Wayanad - Green Paradise</li>
          </ul>
        </div>
        <div class="state">
          <h5>Tamil Nadu</h5>
          <ul>
            <li>Chennai - Marina Beach</li>
            <li>Madurai - Meenakshi Temple</li>
            <li>Ooty - Hill Station</li>
            <li>Kanyakumari - Southern Tip</li>
            <li>Pondicherry - French Colony</li>
          </ul>
        </div>
       
      </div>
    </div>


    <div class="features-section">
      <h2>Features We Offer</h2>
      <div class="features-container">
        <div class="feature">
          <img src="/images/review-feature.png" alt="Feature 1">
          <h5>Place reviews</h5>
        </div>
        <div class="feature">
          <img src="/images/ai-feature.png" alt="Feature 2">
          <h5>AI Trip Planner</h5>
        </div>
        <div class="feature">
          <img src="/images/booking-feature.webp" alt="Feature 3">
          <h5>Hotel, Flight bookings and more</h5>
        </div>
        <div class="feature">
          <img src="/images/wildLife-safari.jpg" alt="Feature 4">
          <h5>Wildlife Safari</h5>
        </div>
      </div>
    </div>
  </div>

  

  <footer class="text-center py-3" style="background-color: #f8f9fa;">
    <h5>Built with ❤️ By Basavakiran</h5>
    <div class="mt-3">
      <!-- Instagram -->
      <a href="https://instagram.com" target="_blank" class="mx-2">
        <i class="bi bi-instagram" style="font-size: 1.5rem;"></i>
      </a>
      <!-- Mail -->
      <a href="mailto:your-email@example.com" target="_blank" class="mx-2">
        <i class="bi bi-envelope" style="font-size: 1.5rem;"></i>
      </a>
      <!-- Facebook -->
      <a href="https://facebook.com" target="_blank" class="mx-2">
        <i class="bi bi-facebook" style="font-size: 1.5rem;"></i>
      </a>
      <!-- Twitter -->
      <a href="https://twitter.com" target="_blank" class="mx-2">
        <i class="bi bi-twitter" style="font-size: 1.5rem;"></i>
      </a>
    </div>
  </footer>
  
  <script>
    const images = document.querySelectorAll('.image-slider img');
    let currentIndex = 0;

    function changeImage() {
      images[currentIndex].classList.remove('active');
      currentIndex = (currentIndex + 1) % images.length;
      images[currentIndex].classList.add('active');
    }

    setInterval(changeImage, 2000);

    document.addEventListener('scroll', function () {
      const aiFeature = document.getElementById('ai-feature');
      const rect = aiFeature.getBoundingClientRect();
      if (rect.top < window.innerHeight && rect.bottom >= 0) {
        aiFeature.classList.add('visible');
      }
    });
  </script>

</body>
</html>
